                       HorizontalAlignment="Center"
                       FontFamily="Bauhaus 93"
                       FontWeight="Medium"/>

            <Button x:Name="inchide" Content="X"
                    Foreground="White"
                    FontSize="14"
                    FontWeight="Medium"
                    Grid.Column="13" Click="close" >
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="TextElement.FontFamily" Value="Bahnschrift Light SemiCondensed"/>
                        <Setter Property="Background" Value="#FE6584"/>
                        <Setter Property="Cursor" Value="Hand"/>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#ff4c70"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Width="30" Height="20"
                                    CornerRadius="12"
                                    Background="{TemplateBinding Background}">
                            <ContentPresenter VerticalAlignment="Center"
                                                  HorizontalAlignment="Center"/>

                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>
            <Button Content="-"
                Foreground="White"
                FontSize="14"
                FontWeight="Medium"
                Grid.Column="12"   Grid.ColumnSpan="2" Margin="10,0,47,0">
