                                HorizontalAlignment="Center"/>

                        </Border>
                    </ControlTemplate>
                </Button.Template>

            </Button>
            <Button x:Name="Serviciibtn" Content="Servicii"
                Foreground="#ff4c70"
                FontSize="14"
                FontWeight="Medium"
                Grid.Column="3" FontFamily="Bauhaus 93" Grid.ColumnSpan="2" Margin="0,0,57,0" Background="#181735" BorderBrush="#181735" Click="serviciibtn"/>
